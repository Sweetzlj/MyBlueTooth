<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relalayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.route.test.mybluetooth.ui.SplashActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/rollvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/tv_jump"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/jinru"
        android:gravity="center"
        android:text="跳过" />


    <LinearLayout
        android:layout_marginBottom="50dp"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bit1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_select" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_bit2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_normal"  />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_bit3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_normal"  />

    </LinearLayout>
</RelativeLayout>
